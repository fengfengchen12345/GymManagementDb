@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        .search-form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px; /* Adds space between the input and the button */
        margin-top: 20px;
        }

        .search-input {
        width: 300px; /* Adjust the width as needed */
        padding: 12px; /* Adds padding inside the input box */
        font-size: 18px; /* Increases text size */
        height: 40px; /* Increases the height of the input */
        border-radius: 5px; /* Optional, for rounded corners */
        border: 1px solid #ccc; /* Optional, for border styling */
        }

        .search-button {
        padding: 12px 20px; /* Increases button size */
        font-size: 18px; /* Makes the button text bigger */
        background-color: #007bff; /* Button background color */
        color: white; /* Button text color */
        border: none; /* Removes border */
        border-radius: 5px; /* Optional, for rounded corners */
        cursor: pointer; /* Changes cursor to pointer when hovering */
        }

        .search-button:hover {
        background-color: #0056b3; /* Darker blue when hovering */
        }
    </style>
</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>

    <form asp-action="Search" asp-controller="Workouts" class="search-form">
        <input type="text" name="x" placeholder="Search Workouts..." class="search-input" />
        <button type="submit" class="search-button">Search</button>
    </form>

</body>
</html>


<div class="text-center">
    <h1 class="display-4">Welcome to GymManagement</h1>
    <div id="GymImages" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#GymImages" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#GymImages" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#GymImages" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/trainers.webp" class="d-block mx-auto w-50" alt="Trainers">
            </div>
            <div class="carousel-item">
                <img src="/Images/workouts.jpeg" class="d-block mx-auto w-50" alt="Workouts">
            </div>
            <div class="carousel-item">
                <img src="/Images/gym.jpg" class="d-block mx-auto w-50" alt="gym">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#GymImages" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#GymImages" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <div class="card" style="width: 18rem; margin-top: 250px;">
        <!-- Added margin-top -->
        <a asp-controller="MembershipTypes" asp-action="Index">
            <img src="~/Images/membershiptypes.jpg" class="card-img-top" alt="MembershipTypes">
        </a>

        <div class="card-body">
            <h5 class="card-title" style="color:black">Rooms</h5>
            <p class="card-text" style="color:black">All MembershipTypes at the gym.</p>
        </div>
    </div>
</div>



